@model AgreementViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Anlaşma Listesi";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .form-inline .form-group {
            margin-right: 15px;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-4">@ViewData["Title"]</h2>
        <form asp-action="Index" method="get" class="form-inline mb-4">
            <div class="form-group">
                <label for="title" class="mr-2">Title</label>
                <input type="text" id="title" name="Filter.Title" class="form-control" value="@Model.Filter?.Title" />
            </div>
            <div class="form-group">
                <label for="company" class="mr-2">Company</label>
                <input type="text" id="company" name="Filter.Company" class="form-control" value="@Model.Filter?.Company" />
            </div>
            <div class="form-group">
                <label for="startDate" class="mr-2">Start Date</label>
                <input type="date" id="startDate" name="Filter.StartDate" class="form-control" value="@Model.Filter?.StartDate?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="form-group">
                <label for="endDate" class="mr-2">End Date</label>
                <input type="date" id="endDate" name="Filter.EndDate" class="form-control" value="@Model.Filter?.EndDate?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="form-group">
                <label for="riskValue" class="mr-2">Risk Value</label>
                <input type="number" step="0.01" id="riskValue" name="Filter.MaxRiskValue" class="form-control" value="@Model.Filter?.RiskValue" />
            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>

        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Title</th>
                    <th>Company</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Risk Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var agreement in Model.Agreements)
                {
                    <tr>
                        <td>@agreement.Title</td>
                        <td>@agreement.Company</td>
                        <td>@agreement.StartDate.ToString("yyyy-MM-dd")</td>
                        <td>@agreement.EndDate.ToString("yyyy-MM-dd")</td>
                        <td>@agreement.RiskValue</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>